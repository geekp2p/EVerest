{
  "name": "ChargeBridge (devcontainer)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  // เปิดพอร์ตที่ central.py ใช้
  "forwardPorts": [8080, 9000],
  "runArgs": ["-p", "8080:8080", "-p", "9000:9000"],

  // ให้ VS Code โฟกัสที่โฟลเดอร์นี้เมื่อเข้า container
  "workspaceFolder": "/workspaces/EVerest/ChargeBridge",

  // ผู้ใช้ภายในคอนเทนเนอร์
  "remoteUser": "vscode",

  // ใช้ requirements.txt ที่เราปรับแล้ว
  "postCreateCommand": "pip install --no-cache-dir -r /workspaces/EVerest/ChargeBridge/requirements.txt",

  // ใช้ extensions ที่ช่วยทำงาน
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers"
      ]
    }
  }
}
